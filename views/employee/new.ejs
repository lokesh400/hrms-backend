<div class="max-w-3xl mx-auto mt-10 bg-white p-8 shadow-lg rounded-xl">
  <h2 class="text-2xl font-bold text-gray-800 mb-6">âž• Add New Employee</h2>

  <form action="/employee" method="POST" class="space-y-5">
    <!-- Basic Info -->
    <div>
      <label class="block font-semibold text-gray-700 mb-1">Full Name</label>
      <input name="name" required placeholder="Name"
             class="w-full px-4 py-2 border rounded-lg focus:ring focus:ring-blue-300" />
    </div>

    <div>
      <label class="block font-semibold text-gray-700 mb-1">Email</label>
      <input name="email" type="email" required placeholder="Email"
             class="w-full px-4 py-2 border rounded-lg focus:ring focus:ring-blue-300" />
    </div>

    <div>
      <label class="block font-semibold text-gray-700 mb-1">Phone</label>
      <input name="phone" placeholder="Phone"
             class="w-full px-4 py-2 border rounded-lg focus:ring focus:ring-blue-300" />
    </div>

    <div>
      <label class="block font-semibold text-gray-700 mb-1">Department</label>
      <input name="department" placeholder="Department"
             class="w-full px-4 py-2 border rounded-lg focus:ring focus:ring-blue-300" />
    </div>

    <div>
      <label class="block font-semibold text-gray-700 mb-1">Role in Company</label>
      <input name="role" placeholder="e.g. Developer, Manager"
             class="w-full px-4 py-2 border rounded-lg focus:ring focus:ring-blue-300" />
    </div>

    <hr class="my-6 border-gray-300" />

    <!-- Login Credentials -->
    <div>
      <label class="block font-semibold text-gray-700 mb-2">Create Login Credentials?</label>
      <select name="createLogin" id="createLogin" onchange="toggleLoginFields(this)"
              class="w-full px-4 py-2 border rounded-lg bg-white focus:ring focus:ring-blue-300">
        <option value="no">No</option>
        <option value="yes">Yes</option>
      </select>
    </div>

    <div id="loginFields" class="space-y-5 transition-all duration-300 overflow-hidden" style="display: none;">
      <div>
        <label class="block font-semibold text-gray-700 mb-1">Username (email or ID)</label>
        <input name="loginUsername" placeholder="Username"
               class="w-full px-4 py-2 border rounded-lg focus:ring focus:ring-blue-300" />
      </div>

      <div>
        <label class="block font-semibold text-gray-700 mb-1">Login Role</label>
        <select name="loginRole"
                class="w-full px-4 py-2 border rounded-lg bg-white focus:ring focus:ring-blue-300">
          <option value="employee">Employee</option>
          <option value="admin">Admin</option>
        </select>
      </div>

      <div>
        <label class="block font-semibold text-gray-700 mb-1">Password</label>
        <input name="loginPassword" type="password" placeholder="Password"
               class="w-full px-4 py-2 border rounded-lg focus:ring focus:ring-blue-300" />
      </div>
    </div>

    <!-- Submit -->
    <div class="pt-4">
      <button type="submit"
              class="bg-blue-600 hover:bg-blue-700 text-white px-6 py-2 rounded-lg font-semibold shadow">
        Create Employee
      </button>
    </div>
  </form>
</div>

<script>
function toggleLoginFields(select) {
  const section = document.getElementById('loginFields');
  section.style.display = select.value === 'yes' ? 'block' : 'none';
}
</script>
