<div class="max-w-xl mx-auto bg-white shadow-lg rounded-xl p-6 mt-10">
  <h2 class="text-2xl font-semibold text-gray-800 mb-4"><%= employee.name %></h2>
  
  <ul class="space-y-2 text-gray-700">
    <li><span class="font-medium">Email:</span> <%= employee.email %></li>
    <li><span class="font-medium">Phone:</span> <%= employee.phone %></li>
    <li><span class="font-medium">Department:</span> <%= employee.department %></li>
    <li><span class="font-medium">Role:</span> <%= employee.role %></li>
  </ul>

  <div class="flex flex-wrap gap-4 mt-6 items-center">
    <% if (currentUser?.role === 'admin') { %>
      <a href="/employees/<%= employee._id %>/edit" class="px-4 py-2 bg-blue-600 text-white rounded hover:bg-blue-700">
        Edit
      </a>
      <form method="POST" action="/employees/<%= employee._id %>?_method=DELETE" onsubmit="return confirm('Are you sure you want to delete this employee?')">
        <button type="submit" class="px-4 py-2 bg-red-600 text-white rounded hover:bg-red-700">
          Delete
        </button>
      </form>
    <% } %>
    
    <a href="/employees" class="ml-auto text-sm text-gray-500 hover:text-gray-800 underline">
      ‚Üê Back to List
    </a>
  </div>
</div>
